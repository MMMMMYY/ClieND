{
  "num_clients": 50,
  "target_class": 8,
  "epochs": 500,
  "batch_size": 64,
  "learning_rate": 0.01,
  "k": 0.5,
  "dataset": "enron",
  "model_choice": "UnifiedFullyConnected_enron",
  "distribution_iid": true,
  "q": 0.1,
  "attack": {
    "enabled": true,
    "type": "lie",
    "deviation_type": "unit_vec",
    "n_attackers": 10,
    "attack_start_epoch": 300,
    "target_flip_labels": 1,
    "specific_labels_to_flip": [5, 6, 7, 8, 9],
    "dropout_rate": 0.5,
    "separation_factor": 2.0,
    "severity": 1,
    "random_seed": 42
  },
  "models": {
    "SimpleCNN_cifar100": {
      "conv_layers": [
        {"in_channels": 3, "out_channels": 64, "kernel_size": 5},
        {"in_channels": 64, "out_channels": 128, "kernel_size": 5}
      ],
      "fc_layers": [
        {"in_features": 3200, "out_features": 256},
        {"in_features": 256, "out_features": 100}
      ]
    },
    "SimpleCNN_mnist": {
      "conv_layers": [
        {"in_channels": 1, "out_channels": 32, "kernel_size": 5},
        {"in_channels": 32, "out_channels": 64, "kernel_size": 5}
      ],
      "fc_layers": [
        {"in_features": 1024, "out_features": 128},
        {"in_features": 128, "out_features": 10}
      ]
    },
    "UnifiedFullyConnected_texas": {
      "input_dim": 6169,
      "hidden_dim": 128,
      "output_dim": 100
    },
    "UnifiedFullyConnected_enron": {
      "input_dim": 10000,
      "hidden_dim": 128,
      "output_dim": 2
    }
  },
  "datasets": {
    "cifar100": {
      "train_data_path": "datasets-master/cifar100/train",
      "test_data_path": "datasets-master/cifar100/test"
    },
    "mnist": {
      "train_data_path": "datasets-master/mnist/train",
      "test_data_path": "datasets-master/mnist/test"
    },
    "texas": {
      "npz_file": "datasets-master/texas100.npz"
    },
    "enron": {
      "data_dir": "datasets-master/maildir/"
    }
  }
}
